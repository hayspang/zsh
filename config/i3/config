# basic config
    set $mod Mod4
    font pango:monospace 8
    default_border pixel 1
    default_floating_border none
    hide_edge_borders none
    floating_modifier $mod
    workspace_auto_back_and_forth no
    focus_follows_mouse no

# Autostart applications
    exec --no-startup-id ~/.config/zsh/script/start/start.sh
    exec --no-startup-id /usr/lib/polkit-gnome/polkit-gnome-authentication-agent-1
    exec --no-startup-id nm-applet
    exec --no-startup-id xfce4-power-manager
    exec --no-startup-id xautolock -time 10 -locker blurlock
    exec --no-startup-id bluetoothctl power on
    exec --no-startup-id fcitx
    exec --no-startup-id electron-ssr
    exec --no-startup-id /usr/lib/gsd-xsettings &
    exec_always --no-startup-id compton -b
    exec_always --no-startup-id feh --randomize --bg-fill ~/Pictures/壁纸/*
    exec_always --no-startup-id autotiling
    exec_always --no-startup-id fix_xcursor

# maps
    # kill
        bindsym $mod+q kill
        bindsym $mod+Shift+q --release exec --no-startup-id xkill
    # toggle
        #  bindsym $mod+h bar mode toggle
        bindsym $mod+v split toggle
        bindsym $mod+f fullscreen toggle
    # change container layout (stacked, tabbed, toggle split)
        bindsym $mod+w layout toggle split
    # toggle floating
        bindsym $mod+t floating toggle
        bindsym $mod+Shift+t focus mode_toggle
        bindsym $mod+Shift+minus move scratchpad
        bindsym $mod+minus scratchpad show
    # system menu
        bindsym $mod+z exec --no-startup-id morc_menu
        bindsym $mod+Ctrl+m exec --no-startup-id terminal -e 'alsamixer'
        bindsym $mod+Ctrl+b exec --no-startup-id terminal -e 'bmenu'
    # applications
        bindsym $mod+F2 exec --no-startup-id google-chrome-stable
        bindsym $mod+F3 exec --no-startup-id pcmanfm
        bindsym $mod+m exec --no-startup-id netease-cloud-music
        bindsym $mod+Shift+m exec --no-startup-id pavucontrol
    # i3 reload
        bindsym $mod+Shift+c reload
        bindsym $mod+Shift+r restart
    # Lock screen
        bindsym $mod+l exec --no-startup-id blurlock
    # 截图工具
        bindsym $mod+Shift+a --release exec --no-startup-id /usr/bin/flameshot gui
        bindsym Print exec --no-startup-id i3-scrot
        bindsym $mod+Print --release exec --no-startup-id i3-scrot -w
    # 终端
        bindsym $mod+Return exec --no-startup-id st
    # 启动器
        bindsym $mod+space exec --no-startup-id dmenu_recency
        bindsym $mod+d exec --no-startup-id rofi -show run
    # focus & move
        bindsym $mod+Up focus up
        bindsym $mod+Down focus down
        bindsym $mod+Left focus left
        bindsym $mod+Right focus right
        bindsym $mod+Shift+Up move up
        bindsym $mod+Shift+Down move down
        bindsym $mod+Shift+Left move left
        bindsym $mod+Shift+Right move right
    # workspace back and forth (with/without active container)
        bindsym $mod+b workspace back_and_forth
        bindsym $mod+Shift+b move container to workspace back_and_forth; workspace back_and_forth
    # navigate workspaces next/previous
        bindsym $mod+n workspace next
        bindsym $mod+p workspace prev
        bindsym $mod+Tab workspace next
        bindsym $mod+Shift+Tab workspace prev
    # Workspace 
        set $ws1 1
        set $ws2 2
        set $ws3 3
        set $ws4 4
        set $ws5 5
        set $ws6 6
        set $ws7 7
        set $ws8 8
        set $ws9 9
        set $ws0 :)
        bindsym $mod+0 workspace $ws0
        bindsym $mod+1 workspace $ws1
        bindsym $mod+2 workspace $ws2
        bindsym $mod+3 workspace $ws3
        bindsym $mod+4 workspace $ws4
        bindsym $mod+5 workspace $ws5
        bindsym $mod+6 workspace $ws6
        bindsym $mod+7 workspace $ws7
        bindsym $mod+8 workspace $ws8
        bindsym $mod+9 workspace $ws9
        bindsym $mod+Ctrl+0 move container to workspace $ws0
        bindsym $mod+Ctrl+1 move container to workspace $ws1
        bindsym $mod+Ctrl+2 move container to workspace $ws2
        bindsym $mod+Ctrl+3 move container to workspace $ws3
        bindsym $mod+Ctrl+4 move container to workspace $ws4
        bindsym $mod+Ctrl+5 move container to workspace $ws5
        bindsym $mod+Ctrl+6 move container to workspace $ws6
        bindsym $mod+Ctrl+7 move container to workspace $ws7
        bindsym $mod+Ctrl+8 move container to workspace $ws8
        bindsym $mod+Ctrl+9 move container to workspace $ws9
        bindsym $mod+Shift+0 move container to workspace $ws0; workspace $ws0
        bindsym $mod+Shift+1 move container to workspace $ws1; workspace $ws1
        bindsym $mod+Shift+2 move container to workspace $ws2; workspace $ws2
        bindsym $mod+Shift+3 move container to workspace $ws3; workspace $ws3
        bindsym $mod+Shift+4 move container to workspace $ws4; workspace $ws4
        bindsym $mod+Shift+5 move container to workspace $ws5; workspace $ws5
        bindsym $mod+Shift+6 move container to workspace $ws6; workspace $ws6
        bindsym $mod+Shift+7 move container to workspace $ws7; workspace $ws7
        bindsym $mod+Shift+8 move container to workspace $ws8; workspace $ws8
        bindsym $mod+Shift+9 move container to workspace $ws9; workspace $ws9
        workspace $ws0 output eDP
        workspace $ws1 output DisplayPort-1
        workspace $ws2 output DisplayPort-1
        workspace $ws3 output DisplayPort-1
        workspace $ws4 output DisplayPort-1
        workspace $ws5 output DisplayPort-1
        workspace $ws6 output DisplayPort-1
        workspace $ws7 output DisplayPort-1
        workspace $ws8 output DisplayPort-1
        workspace $ws9 output DisplayPort-1

